<style>
    #bodyf {
        width: auto; /* Set width to 100% of viewport width */
        margin-left: calc(-15vw); /* Offset to make it extend to the left */
        margin-right: calc(-15vw); /* Offset to make it extend to the right */
    }


    /* Custom CSS to adjust the height of carousel items */
    .carousel-item img {
        max-height: 70vh; /* Set the maximum height of the images to 70% of the viewport height */
        width: 100%; /* Ensure the width of the images fills the container */
        object-fit: cover; /* Maintain the aspect ratio and cover the entire container */
    }
    /* Background for carousel captions */
    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5); /* Black background with 50% opacity */
        padding: 10px; /* Add padding to the captions */
        border-radius: 10px; /* Add border radius for rounded corners */
    }
        /* Background for carousel captions */
        .carousel-caption:hover {
            background-color: rgba(0, 0, 0, 1); /* Black background with 50% opacity */
            padding: 10px; /* Add padding to the captions */
            border-radius: 10px; /* Add border radius for rounded corners */
        }
        /* Text color for carousel captions */
        .carousel-caption h5,
        .carousel-caption p {
            color: white; /* Set text color to white for better readability */
        }
    /* Custom CSS for carousel control arrows */
    .carousel-control-prev,
    .carousel-control-next {
        font-weight: bold; /* Make the arrows bold */
        z-index: 1; /* Ensure arrows appear above the images */
        background-color: rgba(0, 0, 0, 0.0); /* Transparent background for better visibility */
        border: none; /* Remove border */
        font-size: 3rem; /* Increase arrow size */
    }
        /* Custom CSS for carousel control arrows */
        .carousel-control-prev,
        .carousel-control-next:hover {
            font-weight: bold; /* Make the arrows bold */
            z-index: 1; /* Ensure arrows appear above the images */
            background-color: rgba(0, 0, 0, 0.5); /* Transparent background for better visibility */
            border: none; /* Remove border */
            font-size: 3rem; /* Increase arrow size */
        }
    /* Adjust position of carousel control arrows */
    .carousel-control-prev {
        left: 0;
    }

    .carousel-control-next {
        right: 0;
    }
    /* Custom CSS for arrow icons */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        color: black; /* Set arrow color to black */
    }
</style>
